<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="notification_enabled"
        android:title="@string/pref_title_new_message_notifications" />

    <RingtonePreference
        android:defaultValue="content://settings/system/notification_sound"
        android:dependency="notification_enabled"
        android:key="notification_ringtone"
        android:ringtoneType="notification"
        android:title="@string/pref_title_ringtone" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:dependency="notification_enabled"
        android:key="notification_vibrate"
        android:title="@string/pref_title_vibrate" />

    <ListPreference
        android:defaultValue="-1"
        android:dependency="notification_enabled"
        android:entries="@array/pref_noti_color_titles"
        android:entryValues="@array/pref_noti_color_values"
        android:key="notification_color"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_light" />

</PreferenceScreen>
