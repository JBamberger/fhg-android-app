<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="listener"
            type="de.fhg_radolfzell.android_app.view.BaseFragment" />
    </data>

    <android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fab_anchor"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onRefreshListener="@{() -> listener.update()}">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerHeight="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp" />

            </android.support.v4.widget.SwipeRefreshLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:onClickListener="@{(view) -> listener.update()}"
                android:src="@drawable/ic_action_refresh"
                app:layout_anchor="@id/recyclerView"
                app:layout_anchorGravity="bottom|right|end"
                app:layout_behavior="de.fhg_radolfzell.android_app.view.ScrollAwareFABBehavior" />
        </FrameLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>