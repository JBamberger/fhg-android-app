    <!--  TODO: disable for build if not implemented -->
    <PreferenceCategory android:title="@string/pref_category_analytics" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/pref_enable_analytics_key"
        android:summary="@string/pref_enable_analytics_summary"
        android:title="@string/pref_enable_analytics_title" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/pref_enable_crash_reporting_key"
        android:summary="@string/pref_enable_crash_reporting_summary"
        android:title="@string/pref_enable_crash_reporting_title" />

</PreferenceScreen>