<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="@string/preference_grade_show_all_key"
        android:disableDependentsState="true"
        android:defaultValue="true"
        android:title="@string/preference_grade_show_all_title"
        android:summary="@string/preference_grade_show_all_summary" />

    <MultiSelectListPreference
        android:dependency="@string/preference_grade_show_all_key"
        android:key="@string/preference_grade_key"
        android:title="@string/preference_grade_dialog_title"
        android:summary="@string/preference_grade_summary"
        android:entries="@array/listGrades"
        android:entryValues="@array/listGrades"
        android:dialogTitle="@string/preference_grade_dialog_title" />

    <EditTextPreference
        android:dependency="@string/preference_grade_show_all_key"
        android:key="@string/preference_course_key"
        android:title="@string/preference_course_title"
        android:summary="@string/preference_course_summary"
        android:dialogTitle="@string/preference_course_dialog_title" />
</PreferenceScreen>