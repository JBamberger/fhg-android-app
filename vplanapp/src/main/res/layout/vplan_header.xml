<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="12dp">

    <TextView
        android:id="@+id/vplan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/material_text_inverse_100"
        android:textStyle="bold"
        tools:text="Title" />

    <TextView
        android:id="@+id/vplan_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vplan_title"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/material_text_inverse_30"
        android:textStyle="italic"
        tools:text="last updated" />

    <TextView
        android:id="@+id/vplan_motd_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vplan_status"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/material_text_inverse_100"
        android:textStyle="bold"
        tools:text="Nachrichten zum Tag" />

    <TextView
        android:id="@+id/vplan_motd_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vplan_motd_header"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/material_text_inverse_70"
        android:textStyle="italic"
        tools:text="Blablable lorem ipsum coaizse jgsaza" />

</RelativeLayout>