<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- About -->
    <style name="About" />

    <style name="About.Title">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/about_title_padding</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="About.Content">
        <item name="android:padding">@dimen/about_content_padding</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/text_dark_secondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="About.Action" parent="Widget.AppCompat.Button.Borderless.Colored" />

    <!-- VPlan -->
    <style name="VPlan" />

    <style name="VPlan.Row" />

    <style name="VPlan.Row.Info">
        <item name="android:background">@null</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>
