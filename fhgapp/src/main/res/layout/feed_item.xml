<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feed_item_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/blue_grey_100">

    <ImageView
        android:id="@+id/featured_media"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/feed_media_content_desctiption"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/blue_A400" />


    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:padding="16dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_dark_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/featured_media"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@sample/sample.json/feed/title" />


</androidx.constraintlayout.widget.ConstraintLayout>

