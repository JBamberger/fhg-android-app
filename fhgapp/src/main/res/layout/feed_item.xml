<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.Html" />

        <variable
            name="listener"
            type="de.jbamberger.fhgapp.ui.feed.FeedFragment" />

        <variable
            name="obj"
            type="de.jbamberger.api.data.FeedItem" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="12dp"
        android:orientation="vertical"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClickListener="@{(view) -> listener.itemClicked(obj.link)}"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{obj.title.rendered}"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:text="Title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{obj.excerpt.rendered}"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="Content" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>