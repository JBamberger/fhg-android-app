<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="obj"
            type="de.jbamberger.fhg.repository.data.VPlanRow" />

        <variable
            name="listener"
            type="Object" />

    </data>

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:theme="@style/VPlan.Row"
        app:vPlanBackground="@{obj}">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/vplan_grade"
                style="@style/VPlan.Row.Info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:html="@{obj.grade}"
                app:vPlanTextColor="@{obj}"
                tools:text="grade" />

            <TextView
                android:id="@+id/vplan_hour"
                style="@style/VPlan.Row.Info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:html="@{obj.hour}"
                app:vPlanTextColor="@{obj}"
                tools:text="hour" />


            <TextView
                android:id="@+id/vplan_subject"
                style="@style/VPlan.Row.Info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:html="@{obj.subject}"
                app:vPlanTextColor="@{obj}"
                tools:text="subject" />

            <TextView
                android:id="@+id/vplan_room"
                style="@style/VPlan.Row.Info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:html="@{obj.room}"
                app:vPlanTextColor="@{obj}"
                tools:text="room" />

            <TextView
                android:id="@+id/vplan_kind"
                style="@style/VPlan.Row.Info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:html="@{obj.kind}"
                app:vPlanTextColorHighlighted="@{obj}"
                tools:text="kind" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/vplan_line_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/vplan_teacher"
                style="@style/VPlan.Row.Info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:html="@{obj.subTeacher}"
                app:vPlanTextColor="@{obj}"
                app:visibleIfNotEmpty="@{obj.subTeacher}"
                tools:text="teacher" />

            <TextView
                android:id="@+id/vplan_from"
                style="@style/VPlan.Row.Info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:html='@{obj.subFrom}'
                app:vPlanTextColor="@{obj}"
                app:visibleIfNotEmpty="@{obj.subFrom}"
                tools:text="from" />

            <TextView
                android:id="@+id/vplan_to"
                style="@style/VPlan.Row.Info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:html='@{obj.subTo}'
                app:vPlanTextColor="@{obj}"
                app:visibleIfNotEmpty="@{obj.subTo}"
                tools:text="to" />


            <TextView
                android:id="@+id/vplan_content"
                style="@style/VPlan.Row.Info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:html="@{obj.content}"
                app:vPlanTextColor="@{obj}"
                app:visibleIfNotEmpty="@{obj.content}"
                tools:text="content" />

        </LinearLayout>
    </LinearLayout>
</layout>